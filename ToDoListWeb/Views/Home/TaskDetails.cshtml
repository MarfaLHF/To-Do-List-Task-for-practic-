@model ToDoList.Data.Models.Task

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-5">
    <h1>Детали задачи</h1>
    <form asp-controller="Home" asp-action="UpdateTask" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Название:</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Описание:</label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Время выполнения:</label>
            <div class="col-sm-10">
                <input type="datetime-local" asp-for="Deadline" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Приоритет:</label>
            <div class="col-sm-10">
                <select asp-for="Priority" class="form-control">
                    <option value="1">Высокий</option>
                    <option value="2">Средний</option>
                    <option value="3">Низкий</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">Статус:</div>
            <div class="col-sm-10">
                <input type="checkbox" asp-for="IsCompleted" />
            </div>
        </div>

        <div class="form-group row">
            <dt class="col-sm-2">Статус:</dt>
            <dd class="col-sm-10">
                <input asp-for="UserId" />
            </dd>
        </div>

        <input type="hidden" asp-for="Id" />
        <div>
            <button type="submit" class="btn btn-primary btn-block">Сохранить изменения</button>
        </div>
    </form>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-block">Назад к списку задач</a>
    </div>

    <form asp-controller="Home" asp-action="DeleteTask" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить задачу?');">
        <div class="mt-3">
            <button type="submit" class="btn btn-danger btn-block">Удалить задачу</button>
        </div>
    </form>
</div>
