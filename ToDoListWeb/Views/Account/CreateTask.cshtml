@model ToDoList.Data.Models.Task

<h1>Добавление задачи</h1>

<form asp-action="CreateTask" method="post">
    <div class="form-group mb-3">
        <label asp-for="Title">Заголовок</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Deadline">Дедлайн</label>
        <input asp-for="Deadline" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Priority">Приоритет</label>
        <select asp-for="Priority" class="form-control">
            <option value="1">Высокий</option>
            <option value="2">Средний</option>
            <option value="3">Низкий</option>
        </select>
    </div>@*
    <div class="form-group mb-3">
    <label>User</label>
    <input asp-for="UserId" class="form-control" />
    </div> *@

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Добавить задачу</button>
    </div>
    <div class="form-group mt-4">
    </div>
</form>
