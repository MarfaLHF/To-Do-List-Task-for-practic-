@model ToDoList.Data.Models.User

<!DOCTYPE html>
<html>

<body>
    <div class="container mx-auto text-center">
        <h2>Регистрация</h2>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form asp-action="Registration" method="post">
            <div class="form-group">
                <label asp-for="Username">Имя пользователя</label>
                <input asp-for="Username" class="form-control form-control-sm" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordHash">Пароль</label>
                <input asp-for="PasswordHash" type="password" class="form-control form-control-sm" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary me-2">Зарегистрироваться</button>
            <a type="button" class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Авторизоваться</a>
        </form>
    </div>
</body>
</html>
